FROM node:alpine as build
WORKDIR /usr/app
COPY ./GFS_frontend ./
RUN npm config set legacy-peer-deps true
RUN npm install
RUN npm run build

# Production Stage
FROM nginx:stable-alpine AS production
COPY --from=build /usr/app/build /usr/share/nginx/html
# EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
